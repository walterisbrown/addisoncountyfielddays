doctype html
block vars

html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    if title
      title #{title}
    if description
      meta(name='description', content='#{description}')
    meta(name='robots', content='robots.txt')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=2.0; user-scalable=1')
    meta(name='author', content='James J Nadeau')

    //- link(rel='manifest', href='/manifest.json')
    link(rel="apple-touch-icon", sizes="180x180", href="/icons/apple-touch-icon.png?v=#{version}")
    link(rel="icon", type="image/png", href="/icons/favicon-32x32.png?v=#{version}", sizes="32x32")
    link(rel="icon", type="image/png", href="/icons/favicon-16x16.png?v=#{version}", sizes="16x16")
    link(rel="mask-icon", href="/icons/safari-pinned-tab.svg?v=#{version}", color="#2489ce")
    link(rel="shortcut icon", href="/icons/favicon.ico?v=#{version}")
    meta(name="msapplication-config", content="/icons/browserconfig.xml?v=#{version}")
    meta(name="theme-color", content="#2489ce")

    link(href='/styles.css?v=#{version}', rel='stylesheet', type='text/css')

  body
    // Loading spinner
    #loading.spinner(style='display: none; clear: none;')
      .bounce1
      .bounce2
      .bounce3
    #wrap
      #header.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand.brand(href='/') Addison County Fair & Field Days
          .collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/information/') General Information
              li
                a(href='/files/Field-Days-Schedule.pdf' target="_blank") Schedule
              li
                a(href='/forms/') Forms
            //- ul.nav.navbar-nav.navbar-right
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Drop Down Links
                  b.caret
                ul.dropdown-menu
                  li
                    a(href="#") Dead link
      #container.container.animated.fadeInRight
        block content
          div !{content}

    
    script(src='/frontend.js?v=#{version}')
    block scripts
